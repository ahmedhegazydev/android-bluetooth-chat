<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="10"
    android:background="#42000000"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="How to use"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:textColor="#ff000000"
        android:textSize="@dimen/abc_text_size_large_material"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:paddingTop="5dp"
        android:textColor="#ff000000"
        android:paddingBottom="5dp"
        android:text="1. Make sure the device you are going to chat with is paired to yours, if it is not then you can pair with it from within this app"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2. With the app running on both devices, one should initiate a connection to the other"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit1"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ff000000"
        android:text="3. Start chatting"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="How to chat with a PC"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#ff000000"
        android:textSize="@dimen/abc_text_size_large_material">

        </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:text="1. Generate the PC client using this subroutine then send it to your PC"
        android:id="@+id/wlefknj" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Generate"
        android:id="@+id/generateActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:text="Or Download the client for both windows and mac from"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:textSize="@dimen/abc_text_size_large_material"
        android:editable="false"
        android:text="@string/link3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:textSize="@dimen/abc_text_size_large_material"
        android:editable="false"
        android:text="@string/link4" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:text="2. Run the BTM Chat.jar on your PC or the BTM Chat.exe with administrator privilages "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:text="3. Click on the 'Begin Recieving' button"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:text="4. Connect to the PC from the devices menu just as you would connect to a phone and begin chatting"
        android:textColor="#ff000000" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:text="5. You can also copy your messages or any other text from anywhere on your android phone to your computer wirelessly "/>
    <fragment
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:name="com.munsoft.sendtext.MainAct$PlaceholderFragment"
        tools:layout="@layout/fragmentmy">

    </fragment>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iyhlkugtj"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="none"
        android:textColor="#ff000000"
        android:text="If you like this app, Rate it on Play Store" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
android:layout_marginBottom="40dp"
        android:text="Rate"
        android:id="@+id/rate" />

    <fragment
        android:layout_weight="2"
        android:id="@+id/adFragment"
        android:name="com.munsoft.sendtext.LinksInfo$AdFragment"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        tools:layout="@layout/fragmentad"/>

</LinearLayout>
    </ScrollView>